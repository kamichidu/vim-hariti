file
    : bundle*
    ;

bundle
    : 'use' repository
      bundle_option*
    | 'use' 'local' filepath
      local_bundle_option*
    ;

bundle_option
    : 'as' alias (',' alias)*
    | 'enable_if' String
    | 'depends' '('
        dependency*
      ')'
    ;

local_bundle_option
    : 'includes' '(' globexpr* ')'
    | 'excludes' '(' globexpr* ')'
    ;

repository
    : Identifier ('/' Identifier)?
    ;

dependency
    : repository
    ;

alias
    : Identifier
    ;

filepath
    : Path
    ;

globexpr
    : GlobExpr
    ;

Identifier
    : [a-zA-Z0-9.$_-]+
    ;

String
    : '(?:[^\']|\'\')'
    | "(?:[^\"]|\\\")"
    ;

GlobExpr
    : (?:\*{1,2}|\f)+
    ;

Path
    : \f+
    ;
